{
    "swagger": "2.0",
    "info": {
        "title": "Security-Family API",
        "description": "Manage various locations from your family.",
        "version": "1.0.0"
    },
    "produces": [
        "application/json"
    ],
    "host": "localhost:3000",
    "basePath": "/api/v1",
    "paths": {
        "/location": {
            "get": {
                "summary": "",
                "description": "Returns all locations",
                "x-swagger-router-controller": "location",
                "operationId": "getLocations",
                "responses": {
                    "200": {
                        "description": "locations response",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/Location"
                            }
                        }
                    }
                }
            },
            "post": {
                "summary": "",
                "description": "Save the location of member family",
                "x-swagger-router-controller": "location",
                "operationId": "postLocation",
                "consumes": [
                    "multipart/form-data"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters": [{
                        "name": "name",
                        "in": "formData",
                        "description": "Member family name",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "latitude",
                        "in": "formData",
                        "description": "Latitude",
                        "required": true,
                        "type": "number"
                    },
                    {
                        "name": "longitude",
                        "in": "formData",
                        "description": "Longitude",
                        "required": true,
                        "type": "number"
                    }
                ],
                "responses": {                    
                    "401": {
                        "description": "Unauthorized"
                    },
                    "405": {
                        "description": "Invalid input"
                    }
                }
            }
        },

        "/location/{name}": {
            "get": {
                "summary": "",
                "description": "Returns on locations from the system that the user has access to",
                "x-swagger-router-controller": "location",
                "operationId": "getLocationsByName",
                "produces": [
                    "application/json"
                ],
                "parameters": [{
                    "name": "name",
                    "in": "path",
                    "description": "Name of member to fetch",
                    "required": true,
                    "type": "string"
                }],
                "responses": {
                    "200": {
                        "description": "location response",
                        "schema": {
                            "type": "object",
                            "items": {
                                "$ref": "#/definitions/Location"
                            }
                        }
                    }
                }
            }
        }

    },
    "definitions": {
        "Location": {
            "type": "object",
            "allOf": [{
                "$ref": "#/definitions/NewLocation"
            }, {
                "required": [
                    "id"
                ],
                "properties": {
                    "id": {
                        "type": "string"
                    }
                }
            }]
        },
        "NewLocation": {
            "type": "object",
            "required": [
                "id",
                "name",
                "datetime",
                "latitude",
                "longitude"
            ],
            "properties": {
                "id": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "datetime": {
                    "type": "string"
                },
                "latitude": {
                    "type": "number"
                },
                "longitude": {
                    "type": "number"
                }

            }
        }
    }
}